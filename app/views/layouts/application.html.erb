<!DOCTYPE html>
<html>
	<head>
	  <title><%= full_title(yield(:title)) %> </title>
	  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	   <%= stylesheet_link_tag 'formtastic', 'my_formtastic_changes' %>
		<!--[if IE 6]><%= stylesheet_link_tag 'formtastic_ie6' %><![endif]-->
		<!--[if IE 7]><%= stylesheet_link_tag 'formtastic_ie7' %><![endif]-->
	  <%= csrf_meta_tags %>
	  <%= render 'layouts/shim' %>
	  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
	  <%= render 'layouts/googleAnalytics' if Rails.env.production? %>
	  
	  
	</head>
	<body>
		<%= render 'layouts/header' %>

		<div class="container">
		  <%= yield %>
		  <%= render 'layouts/footer' %>
		  <%= debug(params) if Rails.env.development? %>
		</div>
	</body>
</html>
