<h1>Sign in</h1>
<center>
<div class="alert alert-danger" role="alert">
We've changed authentication methods. You'll need to <%= link_to "Reset your password", new_password_path(resource_name) %> before logging in.
</div>
<%= form_for(resource, as: resource_name, url: user_session_path()) do |f| %>
  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true %></div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in" , class: "btn btn-default" %></div>
<% end %>

<%= render "devise/shared/links" %>
</center>